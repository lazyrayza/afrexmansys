<h2>Sign up</h2>

<%= simple_form_for ([@development, @unit])  do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :unit_number,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "number" }%>
    <%= f.input :floor,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "floor" } %>
    <%= f.input :size,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "size" } %>
    <%= f.input :bedrooms,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "bedrooms" } %>
    <%= f.input :bathrooms,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "bathrooms" } %>
    <%= f.input :price,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "price" } %>
    <%= f.input :apartment,
                required: true,
                autofocus: true,
                collection: [["Apartment", true],["House", false]],
                input_html: { multiple: false, class: "multiple-select" } %>
    <%= f.input :description,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "Description" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Create Unit" %>
    <%# raise %>
  </div>
<% end %>

