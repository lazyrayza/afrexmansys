<h2>Sign up</h2>

<%= simple_form_for ([@development, @unit])  do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :unit_number %>
    <%= f.input :floor %>
    <%= f.input :size %>
    <%= f.input :bedrooms%>
    <%= f.input :bathrooms  %>
    <%= f.input :price %>
    <%= f.input :apartment,
                collection: [["Apartment", true],["House", false]] %>
    <%= f.input :available,
                collection: [["Available", true],["Not Available", false]] %>
    <%= f.input :description, :input_html => {:minlength => 10 , maxlength: 300} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Create Unit" %>
    <%# raise %>
  </div>
<% end %>

