<div class="edit-profile-container">
  <div class="edit-profile-box">
    <!-- UPLOAD PHOTO -->
    <div class="edit-title">EDIT PROFILE</div>
    <div class="edit-details">
      <div class="profile-upload">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>

        <%= f.input :photo %>
        <%= f.input :photo_cache,
        as: :hidden,
        required: true %>
        <%= f.input :nationality %>
        <%= f.input :age %>
        <%= f.input :dob %>
        <% if @user.employee == true || @user.manager == true || @user.admin == true%>
          <%= f.input :job_title, required: true %>
        <% end %>
      </div>


      <!-- NAMES -->
      <div class="names-box">
        <div class="first-name-input">
          <%= f.input :first_name,
          required: true %>
        </div>
        <div class="last-name-input">
          <%= f.input :last_name,
          required: true %>
        </div>
      </div>

      <!-- EMAIL & CURRENT PASSWORD -->

      <div class="inline-input">
        <div class="email-current-password">
          <%= f.input :email, required: true, autofocus: true %>
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
            <% end %>
          </div>

        <div class="current-password">
          <%= f.input :current_password,
          hint: "Enter your current password to confirm your changes",
          required: true,
          input_html: { autocomplete: "current-password" } %>
        </div>
      </div>

      <!-- ADDRESS -->

      <!-- PHONE, GENDER & LANGUAGES -->
      <div class="phone-gender">
        <div class="phone-number">
          <%= f.input :contact_number,
          required: false %>
        </div>


        <div class="gender">
          <%= f.input :gender, collection: [["Female", true],["Male", false]], required: true,
          input_html: {
            multiple: false,
            class: "multiple-select"
            },
            include_hidden: false %>
          </div>
        </div>


          <!-- CHANGE PASSWORD -->
          <div class="change-password">
            <h2>Change your password</h2>
          </div>

          <div class="passwords">
            <div class="password-change">
              <%= f.input :password,
              hint: "Leave it blank if you don't want to change your password",
              required: false,
              input_html: { autocomplete: "new-password" } %>
            </div>
            <div class="password-confirmation">
              <%= f.input :password_confirmation,
              required: false,
              input_html: { autocomplete: "new-password" } %>
            </div>

          </div>

          <!-- UPDATE BUTTON -->
          <div class="form-actions">
            <%= f.button :submit, "Update", class: "primary-button" %>
          </div>
          <% end %>
          <div class="bottom-row">
            <hr/>
            <h2>Cancel my account</h2>

            <br>
            <br>

            <div class="bottom-btn">
              <div class="back">
                <%= link_to "Back", :back, class: "secondary-button" %>
              </div>

              <div class="cancel">
                <p>
                  <%= link_to "Cancel my account",
                  registration_path(resource_name),
                  data: {
                    confirm: "Are you sure?"
                  },
                  method: :delete,
                  class: "secondary-button" %>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script>
      document.addEventListener("DOMContentLoaded", (event) => {
        window.scrollTo({top: 0});
      })
    </script>

