<div class="main-ontainer">
  <div class="project-box">
    <% @developments.each do |development| %>
      <div class="dev-card">
        <% if development.photo.file == nil %>
          <div class="dev-card-picture", style="background-image: url(https://images.pexels.com/photos/2976190/pexels-photo-2976190.jpeg?auto=compress&cs=tinysrgb&dpr=2&w=500);">
        <% else %>
          <div class="dev-card-picture", style="background-image: url(<%= cl_image_path(development.photo) %>);">
        <% end %>
          <div class="dev-card-title" onclick="openInfo"><%= development.name.capitalize %></div>
          <button onclick="myFunction()" class="mc-btn-action" id="open-btn">
            <%= link_to development_path(development) do %>
              <i class="fas fa-arrow-circle-right fa-2x"></i>
            <% end %>
          </button>
        </div>
        <div class="dev-card-info" >
          <p><i class="fas fa-map-marked-alt"></i> <%= development.address %></p>
            <% available = 0 %>
            <% development.units.to_a.each do |unit|%>
              <% if unit.available == true %>
                <% available += 1 %>
              <% end %>
            <% end %>
            <p><i class="fas fa-building"></i> <%= available %> / <%= development.units.count %> Available</p>
            <% if development.gym == true %>
              <p><i class="fas fa-dumbbell"></i> Gym</p>
            <% end %>
            <% if development.swimming_pool == true %>
              <p><i class="fas fa-swimmer"></i></i> Swimming Pool</p>
            <% end %>
            <%= link_to notice_board_path(development) do %>
              <button id="notice-btn">
                <i class="far fa-clipboard"></i><p class="small">Notice Board</p>
              </button>
            <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>


