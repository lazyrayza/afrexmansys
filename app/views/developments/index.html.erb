<div class="main-ontainer">
  <div class="project-box">
    <% @developments.each do |development| %>
      <div class="dev-card">
        <div class="dev-card-picture", style="background-image: url(<%= cl_image_path(development.photo) %>);">
          <div class="dev-card-title"><%= development.name.capitalize %></div>
          <a class="mc-btn-action">
            <i class="fa fa-bars"></i>
          </a>
        </div>
        <div class="dev-card-info-hidden">
          <h1><%= link_to development.name, development_path(development) %></h1>
          <h2> <%= development.address %></h2>
        </div>
      </div>
    <% end %>
  </div>
</div>

