<div class="main-ontainer">
  <div class="project-box">
    <% @developments.each do |development| %>
      <div class="dev-card">
        <div class="dev-card-picture", style="background-image: url(<%= cl_image_path(development.photo) %>);">
          <div class="dev-card-title" onclick="openInfo"><%= development.name.capitalize %></div>
          <button class="mc-btn-action" id="open-btn">
            <i class="fa fa-bars"></i>
          </button>
        </div>
        <div class="dev-card-info-hidden" id="hidden">
          <h1><%= link_to development.name, development_path(development) %></h1>
          <h2> <%= development.address %></h2>
        </div>
      </div>
    <% end %>
  </div>
</div>

<script>

  document.getElementById("open-btn").addEventListener("click", myFunction);

  function myFunction() {
    document.getElementById("hidden").classList.add('dev-card-info-active');
  }

</script>
