<%= simple_form_for ([@development, @unit, @lease]) do |f| %>
  <%= f.error_notification %>
  <%= f.input :start_date %>
  <%= f.input :end_date %>
  <%= f.input :duration %>
  <%= f.input :rent %>
  <%= f.input :installments, as: :radio_buttons, collection: [['1', 'Yearly'], ['2', 'Biannually'], ['3', 'Triannually'], ['4', 'Quarterly'], ['6', 'Every 2 Months'], ['12', 'Monthly']], label_method: :second, value_method: :first %>
  <%= f.input :deposit %>
  <%= f.input :notes %>
  <%= f.input :tenant_id,
              collection: @tenants, :label_method => :full_name, :value_method => :id, :label => "Tenant", :include_blank => false,
              as: :radio_buttons %>
  <%# f.collection_check_boxes(:tenant_id, User.where(tenant: true), :id, :first_name) %>
  <%= f.button :submit %>
<% end %>
